<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.name %> | Pok√©dex</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press Start 2P', cursive;
            background: #f0f0f0;
            color: #333;
            text-align: center;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1, h2 {
            color: #ffcb05; 
            margin-bottom: 10px;
        }
        h1 {
            font-size: 3rem;
            margin-top: 0;
        }
        h2 {
            font-size: 2rem;
            margin-top: 20px;
        }
        .info {
            font-size: 1.5rem;
            margin: 20px 0;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            font-size: 1.2rem;
            background: #f5f5f5;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
        }
        .types {
            background: #f0f0f0;
            padding: 10px;
            border-radius: 5px;
        }
        .types li {
            display: inline-block;
            margin: 5px;
            padding: 5px 10px;
            border-radius: 5px;
            color: #fff;
        }
        .header-img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            border: 5px solid #ffcb05; 
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <% const dados = data %>
        <% const commonDivisor = 10 %>

        <h1><%= dados.name %></h1>

        <img class="header-img" src="<%= dados.sprites.front_default %>" alt="<%= dados.name %>">

        <div class="info">
            <p>Altura: <%= dados.height / commonDivisor %> m</p>
            <p>Peso: <%= dados.weight / commonDivisor %> kg</p>
        </div>
        
        <h2>Types</h2>
        <ul class="types">
            <% 
            // Define colors for types
            const typeColors = {
                "normal": "#A8A878",
                "fire": "#F08030",
                "water": "#6890F0",
                "electric": "#F8D030",
                "grass": "#78C850",
                "ice": "#98D8D8",
                "fighting": "#C03028",
                "poison": "#A040A0",
                "ground": "#E0C068",
                "flying": "#A890F0",
                "psychic": "#F85888",
                "bug": "#A8B820",
                "rock": "#B8A038",
                "ghost": "#705898",
                "dragon": "#7038F8",
                "dark": "#705848",
                "steel": "#B8B8D0",
                "fairy": "#F0B6BC"
            };

            dados.types.forEach(element => {
                const typeName = element.type.name;
                const color = typeColors[typeName] || "#000"; // Default color if type is not in the map
            %>
                <li style="background-color: <%= color %>;"><%= typeName %></li>
            <% }) %>
        </ul>

        <h2>Habilidades</h2>
        <ul>
            <% dados.abilities.forEach(element => { %>
                <li><%= element.ability.name %></li>
            <% }) %>
        </ul>

        <h2>Movimentos</h2>
        <ul>
            <% dados.moves.forEach(element => { %>
                <li><%= element.move.name %></li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
